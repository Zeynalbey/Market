@using SuperMarket.Areas.Admin.ViewModels.Products
@model List<MarketViewModel>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


<table class="table">
    <thead>
        <tr>
            <th scope="col">Supermarket</th>
            <th scope="col">Category</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Price</th>
            <th scope="col">Entered Date</th>
        </tr>
    </thead>
    <tbody>
        

        @foreach (var supermarket in Model)
        {
            <tr>
                <td>@supermarket.Name</td>

                <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Category
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">@string.Join(",", supermarket.Products.Select(p=> $"{p.Category}"))</a>
                        </div>
                    </div>
                </td>









  @*              <td>@string.Join(",", supermarket.Products.Select(p=> $"{p.Category}")) </td>*@
                <td>@string.Join(",", supermarket.Products.Select(p=> $"{p.Name}")) </td>
                <td>@string.Join(",", supermarket.Products.Select(p=> $"{p.Price}")) </td>
                <td>@string.Join(",", supermarket.Products.Select(p=> $"{p.CreatedAt.ToString("dd/MM/yyyy")}")) </td>

                @*<td>@string.Join(",", supermarket.Products.Select(p=> $"{p.CreatedAt}".ToString("dd/MM/yyyy"))) </td>*@

            </tr>
        }


    </tbody>
</table>

